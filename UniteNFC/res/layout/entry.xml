<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout  	xmlns:android="http://schemas.android.com/apk/res/android"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content">

    <ImageView android:id="@+id/entry_icon"
               android:layout_width="?android:attr/listPreferredItemHeight"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:src="@drawable/dummy"/>

    <TextView android:id="@+id/entry_comment"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge"
              android:textColor="#000000"
              android:layout_alignParentTop="true"
              android:layout_toRightOf="@+id/entry_icon"
              android:layout_alignBottom="@+id/entry_icon"
              android:layout_margin="2dp"
              android:text="dummy"
              android:textSize="17dp"/>
    <TextView android:id="@+id/entry_bydate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#000000"
              android:layout_below="@+id/entry_icon"
              android:layout_alignParentLeft="true"
              android:layout_toLeftOf="@+id/entry_comment"
              android:layout_marginLeft="3dp"/>

    <TextView
            android:id="@+id/entry_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@+id/entry_comment"
            android:layout_toRightOf="@+id/entry_bydate"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_marginRight="4dp"/>

</RelativeLayout>